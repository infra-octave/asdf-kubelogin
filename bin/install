#!/usr/bin/env bash

set -e
set -o pipefail

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE:-version}
TMPDIR=${TMPDIR:-/tmp/kubelogin}
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_ko() {
  local install_type=$1
  local version=$2
  local install_path=$3

  local bin_install_path="$install_path/bin"
  local bin_path="${bin_install_path}/kubelogin"

  case $(uname | tr '[:upper:]' '[:lower:]') in
    linux*)
      local platform=linux_amd64
      ;;
    darwin*)
      local platform=darwin_amd64
      ;;
    *)
      local platform=notset
      ;;
  esac

  local filename="kubelogin_${platform}"
  local download_url="$(get_download_url $filename)"
  local tmp_bin_path="${TMPDIR}/${filename}.zip"

  echo "Downloading kubelogin from ${download_url}"
  mkdir -p $TMPDIR
  curl -sL $download_url -o $tmp_bin_path

  echo "Extracting ${tmp_bin_path}"
  unzip $tmp_bin_path -d $TMPDIR

  echo "Moving bin to ${bin_path}"
  mkdir -p $bin_install_path
  cp $TMPDIR/kubelogin $bin_path

  echo "Cleaning tmps..."
  rm -r $TMPDIR

  echo "Run: asdf current kubelogin ${version}"
  chmod +x $bin_path
}

get_download_url() {
  local filename="$1"
  echo "https://github.com/int128/kubelogin/releases/download/v${version}/${filename}.zip"
}

install_ko $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
